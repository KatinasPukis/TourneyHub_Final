@model TourneyHub.Feature.Tournament.Models.TournamentModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@Model.TournamentName</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Custom CSS for styling */
        .nav-link {
            color: #333;
        }

            .nav-link:hover {
                color: #007bff;
            }

        /* Adjust vertical navbar width */
        .sidebar {
            width: 250px;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Vertical Navbar -->
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="@Model.LinkToSelf">@Model.TournamentName</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Model.LinkToParticipants">Teams/Participants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Model.LinkToTournamentMatches">Matches</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10">
                <div class="container">
                    <div class="row">
                        <!-- Column for Tournament Details -->
                        <div class="col-md-6">
                            <h2>Tournament Details</h2>
                            <table class="table table-bordered">
                                <tr>
                                    <th>Tournament Type</th>
                                    <td>@Model.TournamentType</td>
                                </tr>
                                <tr>
                                    <th>Tournament Format</th>
                                    <td>@Model.TournamentFormat</td>
                                </tr>
                                <tr>
                                    <th>Sport Name</th>
                                    <td>@Model.SportName</td>
                                </tr>
                            </table>
                        </div>
                        <!-- Add more columns/content as needed -->
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>
</html>
