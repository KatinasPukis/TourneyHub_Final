        <div class="row">
            <!-- Vertical Navbar -->
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="@Model.LinkToSelf">@Model.TournamentName</a>
